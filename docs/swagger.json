{
  "swagger": "2.0",
  "info": {
    "description": "mo.ele api docs",
    "version": "1.0.0",
    "title": "mo.ele API",
    "contact": {
      "email": "626100676@qq.com"
    }
  },
  "basePath": "/api",
  "tags": [
    {
      "name": "food",
      "description": "api about found"
    },
    {
      "name": "user",
      "description": "api about user"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "login",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "schema": {
              "properties": {
                "username": {
                  "type": "string",
                  "description": "username"
                },
                "password": {
                  "type": "string",
                  "description": "password"
                },
                "captcha_code": {
                  "type": "string",
                  "description": "catpcha code"
                }
              },
              "required": [
                "username",
                "password",
                "captcha_code"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login success",
            "schema": {
              "properties": {
                "username": {
                  "type": "string"
                },
                "user_id": {
                  "type": "number"
                },
                "id": {
                  "type": "number"
                },
                "mobile": {
                  "type": "string"
                },
                "is_mobile_valid": {
                  "type": "number",
                  "description": "1 ture | 0 false"
                },
                "is_email_valid": {
                  "type": "number",
                  "description": "1 ture | 0 false"
                },
                "is_active": {
                  "type": "number",
                  "description": "1 ture | 0 false"
                },
                "gift_amount": {
                  "type": "number"
                },
                "email": {
                  "type": "string"
                },
                "delivery_card_expire_days": {
                  "type": "number"
                },
                "current_invoice_id": {
                  "type": "number"
                },
                "current_address_id": {
                  "type": "number"
                },
                "brand_member_new": {
                  "type": "number"
                },
                "balance": {
                  "type": "number"
                },
                "avatar": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          }
        }
      }
    },
    "/user/logout": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Logout",
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "properties": {
                "status": {
                  "type": "number"
                }
              }
            }
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          }
        }
      }
    }
  },
  "definitions": {
    "Error": {
      "properties": {
        "code": {
          "type": "number",
          "description": "Error code"
        },
        "message": {
          "type": "string",
          "description": "Error Info"
        }
      }
    }
  },
  "responses": {
    "Standard500ErrorResponse": {
      "description": "500 Error",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    }
  },
  "externalDocs": {
    "description": "more about mo.ele",
    "url": "https://github.com/morrain/mo-eleo"
  },
  "consumes": [
    "application/json",
    "application/xml"
  ],
  "produces": [
    "application/json",
    "application/xml"
  ]
}